{
  "name": "boilerplate-userstyles",
  "version": "0.0.2",
  "private": true,
  "browserslist": [
    "> 1%",
    "last 10 versions",
    "not dead"
  ],
  "config": {
    "build": "debug"
  },
  "scripts": {
    "build": "cross-var npm-run-all build:$npm_package_config_build:*",
    "build:debug:scss": "node-sass-chokidar --verbose --include-path node_modules src/sass/theme.scss dist/debug/theme.css --source-map-root sass --source-map true --source-map-embed",
    "build:debug:postcss": "postcss --verbose dist/debug/theme.css --use autoprefixer --replace --no-map",
    "build:debug:css2userstyle": "css2userstyle dist/debug/theme.css",
    "build:release:scss": "node-sass-chokidar --include-path node_modules src/sass/theme.scss dist/release/theme.css --output-style compact",
    "build:release:postcss": "postcss dist/release/theme.css --use autoprefixer cssnano --replace --no-map",
    "build:release:css2userstyle": "css2userstyle dist/release/theme.css",
    "prewatch": "npm run build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:scss": "chokidar --verbose src/sass/theme.scss src/sass/**/*.scss -c \"npm run build\"",
    "watch:postcss": "postcss --verbose dist/debug/theme.css --use autoprefixer --replace --no-map",
    "watch:css2userstyle": "css2userstyle dist/debug/theme.css",
    "lint": "stylelint src/sass/**/*.scss",
    "release": "cross-var npm run build --$npm_package_name:build=release",
    "clean": "rimraf debug release"
  },
  "dependencies": {
    "autoprefixer": "^9.4.0",
    "chokidar-cli": "^1.2.1",
    "cross-var": "^1.1.0",
    "cssnano": "^4.1.7",
    "mkdirp": "^0.5.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "rimraf": "^2.6.2",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.0",
    "userstyle-gen": "^0.1.2"
  }
}
